'use strict'

angular.module 'threeManChessApp'
.controller 'BoardCtrl', ($scope, $rootScope, $http, socket, Auth, Mouse, Pieces, Board) ->
  $rootScope.chessboard = new ThreeChessEngine.Board()
  $rootScope.picked_piece = null
  $rootScope.available_moves = []
  $rootScope.canvas = $("canvas")[0]
  $rootScope.ctx = $rootScope.canvas.getContext("2d")

  $scope.isLoggedIn = Auth.isLoggedIn
  
  $scope.onMouseMove = Mouse.onMouseMove
  $scope.onMouseDown = Mouse.onMouseDown
  
  $scope.drawBoard = Board.drawBoard
  $scope.placePieces = Pieces.placePieces




